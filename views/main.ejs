      <div
        class="meal container"
        onclick="changeBackground(0); changeFoods('breakfast')"
      >
        <img class="meal-img" src="\img\breakfast.svg" />
        <h2>Breakfast</h2>
        <img class="meal-arrow" src="\img\angle-circle-arrow-down.svg" />
      </div>
      <div
        class="meal container"
        onclick="changeBackground(1); changeFoods('lunch')"
      >
        <img class="meal-img" src="\img\lunch.svg" />
        <h2>Lunch</h2>
        <img class="meal-arrow" src="\img\angle-circle-arrow-down.svg" />
      </div>
      <div
        class="meal container"
        onclick="changeBackground(2); changeFoods('lunch')"
      >
        <img class="meal-img" src="\img\dinner.svg" />
        <h2>Dinner</h2>
        <img class="meal-arrow" src="\img\angle-circle-arrow-down.svg" />
      </div>
    </div>

    <div class="select-item PADDING">
      <h2>Select Items:</h2>
      <button class="filter-button">
        <img class="icon" src="\img\filters 1.png" />
      </button>
    </div>

    <div class="calculate">
      <button class="calculate-button">
        <img class="calculate-img" src="/img/calc.png" />
      </button>
    </div>

    <div class="main PADDING">
      <p id="loading">Loading food ...</p>
    </div>

    <script id="template-esempio" type="text/html">
      <button class="button-box">
        <div class="cibo-box">

          <div class="col form">
            <div class="fake-checkbox">
              <div class="fake-checkbox-2"></div>

            </div>
          </div>
          <div class="col">
            <img
              class="food-img"
              src="https://png.pngtree.com/png-clipart/20190828/ourmid/pngtree-cheese-pizza-png-image_1709797.jpg">
          </div>
          <div class="col info-food">
            <h1 class="food-name">
              <span >{{name}}</span>
            </h1>
            <p class="food-description">
              <span >{{description}} {{waterPrint}} {{meal}}</span>
            </p>
          </div>

        </
        </button>
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
